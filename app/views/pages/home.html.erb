<div class="container-fluid main-banner full-height parallax">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12 col-md-8 offset-md-2 text-center">
        <div class="background">
          <div class="content">
            <div class="">
              <h1 class="header-title uppercase" id="hid"><%= t('main.heading') %></h1>
            </div>
            <div class="sub-content">
              <p><%= t('main.text') %></p>
              <button class="button uppercase main-btn"><a href="#prosjekt"><%= t('main.btn') %></a><i class="empty"></i></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container section project d-flex align-items-center" id="prosjekt">
  <div class="container section-inner">
    <div class="row">
      <div class="col-sm-12 order-2 col-md-6 order-md-1 col-lg-6 d-flex align-items-center">
        <div class="text-center-sm">
          <h3><%= t 'muli.title' %></h3>
            <p class="sub-title"><%= t 'muli.short_description' %></p>
          <p><%= t 'muli.description' %></p>
          <button class="button"><a href="https://muliclothing.com"><%= t 'muli.btn_text' %></a></button>
        </div>
      </div>
      <div class="col-sm-12 order-1 col-md-6 order-md-2 col-lg-6 d-flex align-items-center">
        <%= image_tag 'muli-laptop.png', class: 'img-fluid' %>
      </div>
    </div> <!-- ROW 1 -->
    <div class="row d-flex align-items-center row2">
      <div class="col-sm-12 col-md-6 col-lg-6 d-flex align-items-center">
        <%= image_tag 'byes-laptop.png', class: 'img-fluid' %>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-6 d-flex align-items-center">
        <div class="text-center-sm">
          <h3><%= t 'byes.title' %></h3>
            <p class="sub-title"><%= t 'byes.short_description' %></p>
          <p><%= t 'byes.description' %></p>
          <button class="button"><a href="https://www.byes.no"><%= t 'byes.btn_text' %></a></button>
        </div>
      </div>
    </div> <!-- ROW 2 -->
  </div>
</div>



