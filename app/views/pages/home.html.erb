<div class="about d-flex align-items-center" id="about">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 offset-md-2 text-center d-flex align-items-center">
        <div class="">
          <h3><%= t('about.title') %></h3>
          <p><%= t('about.text') %></p>
          <%= image_tag 'dude.jpg', class: 'circle' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="services d-flex align-items-center parallax" id="tjenester">
  <div class="container">
    <h1 class="text-center service-title"><%= t('services.title') %></h1>
    <br>
    <br>
    <div class="row">
      <div class="col-sm-12 col-md-4">
        <div class="card card1">
          <p class="text-center"><i class="fab fa-wordpress fa-7x" style="color:black;"></i></p>
          <h4 class="text-center"><%= t('services.col_1.title') %></h4>
          <p class="text-center"><%= t('services.col_1.text') %></p>
        </div>
      </div>
      <div class="col-sm-12 col-md-4">
        <div class="card">
          <p class="text-center"><i class="fab fa-js fa-7x" style="color:black;"></i></p>
          <h4 class="text-center"><%= t('services.col_2.title') %></h4>
          <p class="text-center"><%= t('services.col_2.text') %></p>
        </div>
      </div>
      <div class="col-sm-12 col-md-4">
        <div class="card">
          <p class="text-center"><i class="fas fa-credit-card fa-7x" style="color:black;"></i></p>
          <h4 class="text-center"><%= t('services.col_3.title') %></h4>
          <p class="text-center"><%= t('services.col_3.text') %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="contact d-flex align-items-center" id="kontakt">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-lg-6 offset-lg-3 text-center">
        <h1><%= t('contact.title') %></h1>
        <p><%= t('contact.text') %></p>
        <button class="button" data-toggle="modal" data-target="#myModal"><a><%= t('contact.btn') %></a></button>
      </div>
    </div>
  </div>
</div>

