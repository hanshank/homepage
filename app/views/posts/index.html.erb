
  <div class="container-fluid blog-banner d-flex align-items-center parallax" id="blog-banner" style="background-image: url(<%= "/uploads/post/image/#{@posts.newest_post2(:id)}/#{@posts.newest_post2(:image)}" %>);">
    <div class="container">
      <div class="title-box">
        <%= link_to @posts.find_by_id("#{@posts.newest_post2(:id)}"), class: 'remove-link-style' do %>
        <h2 class="text-left black" id="post"><%= @posts.newest_post2(:title).upcase %></h2>
        <% end %>
        <%= link_to 'Read now', @posts.find_by_id("#{@posts.newest_post2(:id)}"), class: 'btn btn-primary'  %>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row">
    <% @posts.order(published_at: :desc).drop(1).each do |post| %>
      <div class="col col-md-4">
        <div class="post-box">
          <% if post.published? %>
            <%= link_to post_path(post), class: "remove-link-style" do %>
              <%= image_tag post.image.to_s, class: 'img-fluid' %>
              <h5 class="clear" id="raiko"><%= post.title%></h5>
            <% end %>
            <%= raw post.content.truncate(200, seperator: /\W/) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
