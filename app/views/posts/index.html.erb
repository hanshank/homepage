<div class="container blog-banner" style="background-image: url(<%= "/uploads/post/image/#{@posts.newest_post.pluck(:id).join}/#{@posts.newest_post.pluck(:image).join}" %>);">

</div>

<div class="container">
<div class="row">
    <% @posts.order(:published_at).each do |post| %>
      <div class="col col-md-8">
        <% if post.published? %>
          <%= link_to post_path(post) do %>
            <%= post.title %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <div class="col col-md-4">
    <%= render 'sidebar' %>
  </div>

</div>
</div>

<img src="" alt="">

<div class="">
  <%=  @posts.newest_post.inspect %>
</div>
